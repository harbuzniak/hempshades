<?xml version="1.0"?>
<config>
    <modules>
        <Hempshades_Material>
            <version>0.1.0</version>
        </Hempshades_Material>
    </modules>
    <frontend>
        <routers>
            <material>
                <use>standard</use>
                <args>
                    <module>Hempshades_Material</module>
                    <frontName>material</frontName>
                </args>
            </material>
        </routers>
    </frontend>
    <admin>
        <routers>
            <material>
                <use>admin</use>
                <args>
                    <module>Hempshades_Material</module>
                    <frontName>material</frontName>
                </args>
            </material>
        </routers>
    </admin>
    <adminhtml>
        <menu>            
            <catalog>
                <children>
                    <materials translate="title" module="material">
                        <title>Manage Fabrics</title>
                        <action>material/adminhtml_material</action>
                        <sort_order>11</sort_order>
                    </materials>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Hempshades_Material>
                            <title>Fabric Module</title>
                            <sort_order>10</sort_order>
                        </Hempshades_Material>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <material>
                    <file>material.xml</file>
                </material>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <material>
                <class>Hempshades_Material_Model</class>
                <resourceModel>material_mysql4</resourceModel>
            </material>
            <material_mysql4>
                <class>Hempshades_Material_Model_Mysql4</class>
                <entities>
                    <material>
                        <table>material</table>
                    </material>
                </entities>
            </material_mysql4>
        </models>
        <resources>
            <material_setup>
                <setup>
                    <module>Hempshades_Material</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </material_setup>
            <material_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </material_write>
            <material_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </material_read>
        </resources>
        <blocks>
            <material>
                <class>Hempshades_Material_Block</class>
            </material>
        </blocks>
        <helpers>
            <material>
                <class>Hempshades_Material_Helper</class>
            </material>
        </helpers>
    </global>
</config>